generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  email       String   @unique
  name        String
  cpf         Int      @unique
  rg          Int      @unique
  phoneNumber String
  dateOfBirth String
  password    String
  role        Role     @default(DELEGADO)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  team        Teams    @relation(fields: [teamId], references: [id])
  teamId     String   @db.ObjectId
}

model Teams {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  name  String @unique
  Users User[]
}

enum Role {
  DELEGADO
  DELEGADO_CHEFE
  PROFESSOR
  ADMIN
}
